datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Page {
  id                       String     @id @default(cuid())
  createdAt                DateTime?  @default(now())
  status                   String?    @default("draft")
  title                    String     @default("")
  summary                  String     @unique @default("")
  content                  String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  coverImage               String?
  imageGallery             Image[]    @relation("Page_imageGallery")
  from_Homepage_categories Homepage[] @relation("Homepage_categories")
}

model Hero {
  id                 String     @id @default(cuid())
  createdAt          DateTime?  @default(now())
  title              String     @default("")
  subtitle           String     @default("")
  image              String?
  from_Homepage_hero Homepage[] @relation("Homepage_hero")
}

model Homepage {
  id             Int           @id
  hero           Hero?         @relation("Homepage_hero", fields: [heroId], references: [id])
  heroId         String?       @map("hero")
  size           String
  notification   Notification? @relation("Homepage_notification", fields: [notificationId], references: [id])
  notificationId String?       @map("notification")
  categories     Page[]        @relation("Homepage_categories")

  @@index([heroId])
  @@index([notificationId])
}

model Notification {
  id                         String     @id @default(cuid())
  createdAt                  DateTime?  @default(now())
  text                       String     @default("")
  buttonText                 String     @default("")
  buttonLink                 String     @default("")
  from_Homepage_notification Homepage[] @relation("Homepage_notification")
}

model Image {
  id                     String    @id @default(cuid())
  createdAt              DateTime? @default(now())
  title                  String    @default("")
  description            String    @default("")
  image                  String?
  from_Page_imageGallery Page[]    @relation("Page_imageGallery")
}
